extends layout

block content
    // display the detail of the first item
    - var item = tip
    div.blue-container
        div.white-container
            div.row
                div.photo
                    img.photo(height='300' width='700' src='http://dreamatico.com/data_images/food/food-6.jpg')
            div.row
                div.quote-text= "\""+item.text+"\""
            div.row
                div.offset-by-six.columns= "-"+item.user_id
                div.offset-by-seven.columns= item.date
                div.offset-by-six.columns
                    a.business-link(href="/view/" + business_type + "/" + business.business_id)= business.name
